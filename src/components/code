<!-- // import { link } from 'react-router-dom'
import axios from 'axios';
import { useState, useMemo, useEffect } from 'react';
import Reviews from './Reviews';

const Categories = () => {

    const [reviews, setReviews] = useState('');
    const [selectedCategory, setSelectedCategory] = useState()
    const [loading, setLoading] = useState(true);
    console.log(reviews, setReviews, 'In categories');

    useEffect(()=> {
      axios
      .get('https://nialls-games-reviews.herokuapp.com/api/reviews')
      .then((response) => {
        setReviews(response.data.reviews);
        setLoading(false);
      })
    }, []);

    function getFilteredList() {
        if (!selectedCategory) {
            return reviews;
          }
          return reviews.filter((review) => review.category === selectedCategory);
    }

    const filteredList = useMemo(getFilteredList, [selectedCategory, reviews]);

    function handleCategoryChange(event) {
        setSelectedCategory(event.target.value);
      }
      
      if (loading) {
        return <h2>Loading...</h2>;
      } else {

    return (
    <div>
        <div className="filter-container">
          <div>Filter by Category:</div>
          <div>
            <select
              name="category-list"
              id="category-list"
              onChange={handleCategoryChange}
            >
              <option value="">All</option>
              <option value="hidden-roles">hidden-roles</option>
              <option value="dexterity">dexterity</option>
              <option value="strategy">strategy</option>
              <option value="deck-building">deck-building</option>
              <option value="hidden-roles">hidden-roles</option>
              <option value="push-your-luck">push-your-luck</option>
              <option value="engine-building">engine-building</option>
              <option value="roll-and-write">roll-and-write</option>
            </select>
          </div>
        </div>
        <div className="review-list">
        
          <Reviews data={filteredList} />
        </div>
      </div>)
      }
    // <>
    // <div>
    //     <h2>Categories</h2>
    //     </div>
    //     </>
    
}
export default Categories; -->